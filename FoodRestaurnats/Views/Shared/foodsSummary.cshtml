@using System.Globalization;
@model food

<div class="col-sm-4 col-lg-4 col-md-4 mt-4">
    <div class="thumbnail card">
        <img src="@Model.ImageThumbnailUrl" style="max-height: 200px;" />
        <div class="caption">
            <h3 class="pull-right">
                @Model.Price.ToString("c", new CultureInfo("en-IN"))
            </h3>
            <h3>
                <a>@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>

        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success" id="cartButton" asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart" asp-route-foodId="@Model.foodId">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>